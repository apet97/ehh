{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for Clankerbot - DISABLED by default",
  "enabled": false,
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommits",
    ":separateMajorReleases"
  ],
  "schedule": ["before 6am on Monday"],
  "timezone": "UTC",
  "labels": ["dependencies", "renovate"],
  "assignees": ["apet97"],
  "packageRules": [
    {
      "description": "Group Python production dependencies",
      "matchDatasources": ["pypi"],
      "matchPackagePatterns": [
        "^fastapi",
        "^httpx",
        "^pydantic",
        "^uvicorn",
        "^apscheduler"
      ],
      "groupName": "python production dependencies",
      "automerge": false
    },
    {
      "description": "Group Python development dependencies",
      "matchDatasources": ["pypi"],
      "matchPackagePatterns": [
        "^pytest",
        "^ruff",
        "^black",
        "^respx"
      ],
      "groupName": "python development dependencies",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Automerge GitHub Actions minor updates",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Pin Docker image digests",
      "matchDatasources": ["docker"],
      "pinDigests": true
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "rebaseWhen": "behind-base-branch"
}
